<Window x:Class="RWCS_Desktop.SettingsWindow"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RWCS_Desktop"
        mc:Ignorable="d"
        Title="SettingsWindow" Height="450" Width="400">
    <Grid>
        <Label x:Name="idLabel" Content="Інтервал знімків екрану(секунди):" HorizontalAlignment="Left" Margin="19,107,0,0" VerticalAlignment="Top"/>
        <Button x:Name="saveButton" Content="Зберегти" HorizontalAlignment="Left" Margin="72,255,0,0" VerticalAlignment="Top" Height="26" Width="66" Click="saveButton_Click"/>
        <Button x:Name="closeButton" Content="Вийти" HorizontalAlignment="Left" Margin="218,255,0,0" VerticalAlignment="Top" Height="26" Width="66" Click="closeButton_Click"/>
        <CheckBox Content="Робити знімки екрану під час роботи" HorizontalAlignment="Left" Margin="72,69,0,0" VerticalAlignment="Top"/>
        <Slider HorizontalAlignment="Left" Margin="219,111,0,0" VerticalAlignment="Top" Width="120" Maximum="299" Minimum="20" Value="15" TickFrequency="5"/>

    </Grid>
</Window>
