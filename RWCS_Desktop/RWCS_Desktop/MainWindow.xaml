<Window x:Class="RWCS_Desktop.MainWindow"
        WindowStartupLocation="CenterScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RWCS_Desktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="1000">
    <Grid>
        <TabControl Margin="0,10,0,0">
            <TabItem Header="Головна">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="projectsList" Height="149" VerticalAlignment="Top" Margin="42,74,672,0" SelectionChanged="projectsList_SelectionChanged"/>
                    <Label Content="Проекти:" HorizontalAlignment="Left" Margin="42,43,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="connectionStatus" Content="" HorizontalAlignment="Left" Margin="720,10,0,0" VerticalAlignment="Top"/>
                    <Label Content="Підключення:" HorizontalAlignment="Left" Margin="629,10,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="refreshButton" Content="Оновити" HorizontalAlignment="Left" Margin="216,23,0,0" VerticalAlignment="Top" Click="refreshButton_Click" Height="28" Width="56"/>
                    <ListBox x:Name="tasksList" Margin="91,324,529,23" SelectionChanged="tasksList_SelectionChanged"/>
                    <Button x:Name="workSession_Button" Content="Почати" HorizontalAlignment="Left" Margin="838,388,0,0" VerticalAlignment="Top" Height="41" Width="107" Click="workSession_Button_Click"/>
                    <Label Content="Завдання спринту:" HorizontalAlignment="Left" Margin="91,293,0,0" VerticalAlignment="Top" Width="120"/>
                    <Label x:Name="timeLabel" Content="00:00:00" HorizontalAlignment="Left" Margin="691,380,0,0" VerticalAlignment="Top" FontSize="36"/>
                    <Grid/>
                    <Button x:Name="projectSettings" Content="Налаштування проекту" Visibility="Hidden" HorizontalAlignment="Left" Margin="42,235,0,0" VerticalAlignment="Top" Height="39" Width="140" Click="projectSettings_Click"/>
                    <ListBox x:Name="sprintListBox" Margin="443,89,281,273" SelectionChanged="sprintListBox_SelectionChanged"/>
                    <Label Content="Доступні активні спринти в обраному проекті:" HorizontalAlignment="Left" Margin="443,58,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="infoLabel" Content="" HorizontalAlignment="Left" Margin="112,245,0,0" VerticalAlignment="Top" Foreground="Red" FontSize="14"/>
                    <TextBlock x:Name="selectedTaskTextBlock" HorizontalAlignment="Left" Margin="606,252,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="54" Width="365" FontFamily="Times New Roman" FontSize="16" FontWeight="Bold"/>


                </Grid>
            </TabItem>
            <TabItem Header="Профіль">
                <Grid Background="#FFE5E5E5">
                    <Label Content="Увійшли як:" HorizontalAlignment="Left" Margin="28,57,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="usernameInfo" Content="" HorizontalAlignment="Left" Margin="107,57,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="logoutButton" Content="Вийти" HorizontalAlignment="Left" Margin="65,174,0,0" VerticalAlignment="Top" Height="24" Width="61" Click="logoutButton_Click"/>
                    <Label Content="Jira API" HorizontalAlignment="Left" Margin="468,35,0,0" VerticalAlignment="Top" FontSize="16" FontWeight="Bold"/>
                    <Label Content="Email:" HorizontalAlignment="Left" Margin="447,79,0,0" VerticalAlignment="Top"/>
                    <Label Content="JiraApiKey:" HorizontalAlignment="Left" Margin="447,114,0,0" VerticalAlignment="Top"/>
                    <Label Content="JiraBaseDomain:" HorizontalAlignment="Left" Margin="431,216,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="jiraApiKey_TextBox" HorizontalAlignment="Left" Margin="527,118,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" Height="80"/>
                    <TextBox x:Name="email_TextBox" HorizontalAlignment="Left" Margin="527,83,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229"/>
                    <TextBox x:Name="jiraBaseUrl_TextBox" HorizontalAlignment="Left" Margin="527,220,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="229"/>
                    <Label Content="Status:" HorizontalAlignment="Left" Margin="457,310,0,0" VerticalAlignment="Top"/>
                    <Button x:Name="checkConnection_Button" Content="Check connection" HorizontalAlignment="Left" Margin="527,261,0,0" VerticalAlignment="Top" Height="27" Width="120" Click="checkConnection_Button_Click"/>
                    <Label x:Name="status_Label" Content="" HorizontalAlignment="Left" Margin="527,310,0,0" VerticalAlignment="Top"/>
                </Grid>
            </TabItem>


            <TabItem x:Name="usersTabItem"  Header="Список користувачів">
                <Grid Background="#FFE5E5E5">
                    <ListBox x:Name="usersListBox"  Margin="0,53,413,214" SelectionChanged="usersListBox_SelectionChanged"/>
                    <ComboBox x:Name="rolePicker" HorizontalAlignment="Left" Margin="70,373,0,0" VerticalAlignment="Top" Width="120"/>
                    <Button x:Name="changeRoleButton" Content="Змінити роль" HorizontalAlignment="Left" Margin="214,366,0,0" VerticalAlignment="Top" Height="29" Width="88" Click="changeRoleButton_Click"/>
                    <Label x:Name="userLabel" Content="" HorizontalAlignment="Left" Margin="111,318,0,0" VerticalAlignment="Top" FontWeight="Bold"/>

                </Grid>
            </TabItem>





        </TabControl>

    </Grid>
</Window>
